<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hallumi.samplecalculator.MainActivity">

    <TextView
        android:id="@+id/scr"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textSize="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/darker_gray"
        android:onClick="onClick"
        android:text="1"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/background_light"
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@id/scr"
        tools:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/darker_gray"
        android:text="2"
        android:onClick="onClick"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/background_light"
        android:textSize="40dp"
        app:layout_constraintLeft_toRightOf="@id/btn1"
        app:layout_constraintTop_toBottomOf="@id/scr"
        tools:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/darker_gray"
        android:text="3"
        android:onClick="onClick"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/background_light"
        android:textSize="40dp"
        app:layout_constraintLeft_toRightOf="@id/btn2"
        app:layout_constraintTop_toBottomOf="@id/scr"
        tools:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/btnplus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/darker_gray"
        android:text="+"
        android:onClick="onClickSign"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/background_light"
        android:textSize="40dp"
        app:layout_constraintLeft_toRightOf="@id/btn3"
        app:layout_constraintTop_toBottomOf="@id/scr"
        tools:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/darker_gray"
        android:text="4"
        android:onClick="onClick"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/background_light"
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        tools:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/darker_gray"
        android:text="5"
        android:onClick="onClick"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/background_light"
        android:textSize="40dp"
        app:layout_constraintLeft_toRightOf="@id/btn4"
        app:layout_constraintTop_toBottomOf="@id/btn2"
        tools:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/darker_gray"
        android:text="6"
        android:onClick="onClick"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/background_light"
        android:textSize="40dp"
        app:layout_constraintLeft_toRightOf="@id/btn5"
        app:layout_constraintTop_toBottomOf="@id/btn3"
        tools:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/btnmin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/darker_gray"
        android:text="-"
        android:onClick="onClickSign"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/background_light"
        android:textSize="40dp"
        app:layout_constraintLeft_toRightOf="@id/btn6"
        app:layout_constraintTop_toBottomOf="@id/btnplus"
        tools:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/darker_gray"
        android:text="7"
        android:onClick="onClick"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/background_light"
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        tools:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/darker_gray"
        android:text="8"
        android:onClick="onClick"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/background_light"
        android:textSize="40dp"
        app:layout_constraintLeft_toRightOf="@id/btn7"
        app:layout_constraintTop_toBottomOf="@id/btn5"
        tools:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/darker_gray"
        android:text="9"
        android:onClick="onClick"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/background_light"
        android:textSize="40dp"
        app:layout_constraintLeft_toRightOf="@id/btn8"
        app:layout_constraintTop_toBottomOf="@id/btn6"
        tools:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/btnmul"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/darker_gray"
        android:text="*"
        android:onClick="onClickSign"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/background_light"
        android:textSize="40dp"
        app:layout_constraintLeft_toRightOf="@id/btn9"
        app:layout_constraintTop_toBottomOf="@id/btnmin"
        tools:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/btndot"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/darker_gray"
        android:text="C"
        android:onClick="Clear"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/background_light"
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@id/btn7"
        tools:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/darker_gray"
        android:text="0"
        android:onClick="onClick"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/background_light"
        android:textSize="40dp"
        app:layout_constraintLeft_toRightOf="@id/btndot"
        app:layout_constraintTop_toBottomOf="@id/btn8"
        tools:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/btneql"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/darker_gray"
        android:text="="
        android:onClick="calculate"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/background_light"
        android:textSize="40dp"
        app:layout_constraintLeft_toRightOf="@id/btn0"
        app:layout_constraintTop_toBottomOf="@id/btn9"
        tools:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/btndiv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_launcher_background"
        android:backgroundTint="@android:color/darker_gray"
        android:text="/"
        android:onClick="onClickSign"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/background_light"
        android:textSize="40dp"
        app:layout_constraintLeft_toRightOf="@id/btneql"
        app:layout_constraintTop_toBottomOf="@id/btnmul"
        tools:background="@android:color/darker_gray" />

</android.support.constraint.ConstraintLayout>
